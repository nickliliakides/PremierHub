@model PremierHub.Models.Match
@{
    ViewBag.Title = "Delete Match Record";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center title" style="margin-right: 40px;">@ViewBag.Title</h2>

<hr />

<h3 class="text-center">Are you sure you would like to delete this match record? You can't undo this action.</h3>


<div class="row">
    <div class="col-md-6 col-md-offset-4">

        <div class="form-group ">
            <label>Home Team:</label>
            @Html.DisplayFor(model => model.HomeTeam.Name)
        </div>
        <div class="form-group">
            <label>Away Team:</label>
            @Html.DisplayFor(model => model.AwayTeam.Name)
        </div>
        <div class="form-group">
            <label>Stadium:</label>
            @Html.DisplayFor(model => model.Stadium.Name)
        </div>
        <div class="form-group ">
            <label>DateTime:</label>
            @Html.DisplayFor(model => model.DateTime)
        </div>
        <div class="form-group">
            <label>Match Preview/Live score Link:</label>
            @Html.DisplayFor(model => model.LiveScoreLink)
        </div>
        <br />

        @using (Html.BeginForm())
        {

            <button type="submit" class="btn btn-danger">Delete</button>
            @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-primary cancelButton" })
        }
    </div>
</div>


