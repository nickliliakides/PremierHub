<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> @ViewBag.Title - Premiership MatchHub</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="https://fonts.googleapis.com/css?family=Lato:400,700|Prociono" rel="stylesheet">
    <link href="~/Content/Site.css" rel="stylesheet" />

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header pull-left">
                <a class="navbar-brand" href="@Url.Action("Index", "Home")"> <img src="~/Image/Premier-League-Logo-Centred.png" alt="Site Logo" style="height:40px; width: 160px; color: #ebebe0;" /></a>
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Add Match", "Create", "Home")</li>
                    <li>@Html.ActionLink("Finished/Playing Matches", "Finished", "Home")</li>
                    <li><a href="#">Bet News</a></li>
                    <li>@Html.ActionLink("Live Table", "Table", "Home")</li>
                    <li>@Html.ActionLink("Top Scorers", "Scorers", "Home")</li>
                </ul>
                @*@Html.Partial("_LoginPartial")*@
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p class="footerText">Copyright &copy; @DateTime.Now.Year Nikolaos Liliakidis</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
